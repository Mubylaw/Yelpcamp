<% include ../partials/header %>

<div class="container">
	<header class="jumbotron" style="margin-top: 25px;">
		<div class="container">
			<h1 class="display-4">	welcome to Yelpcamp! </h1>
			<p class="lead" >View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" role="button" href="/campgrounds/new"> Add new campground </a>	
			</p>
		</div>
	</header>

	<div class="container">
		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<%campgrounds.forEach(function(campground){ %>
				<div class="col-md-4 col-sm-6">
					<div class="img-fluid img-thumbnail ">
						<img src=" <%= campground.image %> " class="image">
						<div class="caption">
							<h4><%= campground.name %></h4>
						</div> 
						<p>
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> more info</a>
						</p>
					</div>	
				</div>
			<% }); %>
		</div>
	</div>
		
</div>


<% include ../partials/footer %>