<% include ../partials/header %>
<div class="container">
	<div >
		<h1 style="margin-top: 20px; text-align: center;"> Edit comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto; ">
			<form action="/campgrounds/<%= campground._id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[comment]" value="<%= comment.comment %>">
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</form>
			<a href="/campgrounds">View all Campgrounds</a>	
		</div>
			
	</div>

</div>

<% include ../partials/footer %>